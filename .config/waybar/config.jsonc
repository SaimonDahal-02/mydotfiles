[
    {
        "name": "topbar",
        "layer": "top",
        "position": "top",
        "height": 27,
        "modules-left": [
            "custom/appmenu",
            "cpu",
            "temperature",
            "memory",
            "disk",
            "custom/gpu-usage",
            "custom/gpu-temp"
        ],
        "modules-center": [
            "hyprland/workspaces"
        ],
        "modules-right": [
            "battery",
            "tray",
            "bluetooth",
            "clock",
            "custom/powermenu"
        ],
        "custom/appmenu": {
            "format": "",
            "format-icon": "",
            "rotate": 0,
            "on-click": "$HOME/dotfiles/.config/waybar/scripts/run-rofi.sh"
        },
        "custom/separator": {
            "format": "  ◆  ",
            "tooltip": false
        },
        "custom/powermenu": {
            "format": "",
            "format-icon": "",
            "rotate": 0,
            "on-click": "$HOME/dotfiles/.config/rofi/scripts/power-menu.sh"
        },
        "tray": {
            "icon-size": 16,
            "spacing": 10
        },
        "bluetooth": {
            "format": "",
            "format-connected": "()",
            "tooltip-format": "{controller_alias}\t{controller_address}",
            "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
            "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
            "on-click": "sh -c '(blueman-manager)' & disown"
        },
        "hyprland/window": {
            "format": "({class})"
        },
        "cpu": {
            "interval": 10,
            "format": "  {usage}%",
            "max-length": 10
        },
        "disk": {
            "interval": 30,
            "format": "󰋊 {percentage_used}%",
            "path": "/",
            "tooltip": true,
            "tooltip-format": "HDD - {used} used out of {total} on {path} ({percentage_used}%)"
        },
        "memory": {
            "interval": 30,
            "format": " {}%",
            "max-length": 10,
            "tooltip": true,
            "tooltip-format": "Memory - {used:0.1f}GB used"
        },
        "custom/gpu-usage": {
            "format": "󰍛 GPU {}%",
            "exec": "nvidia-smi --query-gpu=utilization.gpu --format=csv,noheader,nounits",
            "interval": 5,
            "return-type": "text",
            "tooltip": true
        },
        "custom/gpu-temp": {
            "format": " {}°C",
            "exec": "nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader,nounits",
            "interval": 5,
            "return-type": "text",
            "tooltip": true
        },
        "hyprland/workspaces": {
            "format": "{name}",
            "all-outputs": false,
            "on-click": "activate",
            "sort-by-number": true
        },
        "clock": {
            "format": "{:%I:%M %p}",
            "rotate": 0,
            "format-alt": "{  %d·%m·%y}",
            "tooltip-format": "<span>{calendar}</span>",
            "calendar": {
                "mode": "month",
                "format": {
                    "months": "<span color='#ff6699'><b>{}</b></span>",
                    "days": "<span color='#cdd6f4'><b>{}</b></span>",
                    "weekdays": "<span color='#7CD37C'><b>{}</b></span>",
                    "today": "<span color='#ffcc66'><b>{}</b></span>"
                }
            }
        },
        "battery": {
            "states": {
                "good": 95,
                "warning": 30,
                "critical": 20
            },
            "format": "{icon} {capacity}%",
            "format-charging": " {capacity}%",
            "format-plugged": " {capacity}%",
            "format-alt": "{icon} {time}",
            "format-icons": [
                "󰂎",
                "󰁺",
                "󰁻",
                "󰁼",
                "󰁽",
                "󰁾",
                "󰁿",
                "󰂀",
                "󰂁",
                "󰂂",
                "󰁹"
            ]
        },
        "temperature": {
            "thermal-zone": 6,
            "format": " {temperatureC}°C",
            "critical-threshold": 70,
            "format-critical": " {temperatureC}°C",
            "tooltip": true,
            "interval": 5
        }
    },
    {
        "name": "bottombbar",
        "mode": "dock",
        "position": "bottom",
        "layer": "top",
        "height": 27,
        "modules-right": [
            "backlight",
            "pulseaudio",
            "user"
        ],
        "modules-center": [
            "network"
        ],
        "modules-left": [
            "hyprland/window" 
        ],
        "backlight": {
            "device": "nvidia_wmi_ec_backlight",
            "format": "{icon}  {percent}%",
            "format-icons": [
                "󰃞",
                "󰃟",
                "󰃠"
            ],
            "on-scroll-up": "brightnessctl set 5%+",
            "on-scroll-down": "brightnessctl set 5%-",
            "min-length": 6
        },
        "pulseaudio": {
            "format": "{icon}  {volume}%",
            "format-muted": "",
            "on-click": "pamixer -t",
            "on-click-right": "pavucontrol",
            "on-scroll-up": "pamixer -i 5",
            "on-scroll-down": "pamixer -d 5",
            "scroll-step": 5,
            "format-icons": {
                "headphone": "",
                "hands-free": "",
                "headset": "",
                "default": [
                    "",
                    "",
                    ""
                ]
            }
        },
        "network": {
            "interface": "wlp0s20f3",
            "format": "{ifname}",
            "format-wifi": "{essid} ({signalStrength}%) {bandwidthDownBits:>6} ↓ {bandwidthUpBits:>6} ↑",
            "format-ethernet": "{ipaddr}/{cidr} {bandwidthDownBits:>6} ↓ {bandwidthUpBits:>6} ↑",
            "format-disconnected": "",
            "tooltip-format": "{ifname} via {gwaddr}",
            "tooltip-format-wifi": "{essid} ({signalStrength}%)",
            "tooltip-format-ethernet": "{ifname}",
            "tooltip-format-disconnected": "Disconnected",
            "interval": 1,
            "max-length": 50
        },
        "user": {
                "format": "{user} (up {work_d} days ↑)",
                "interval": 60,
                "height": 30,
                "width": 30,
                "icon": true
        },
        "hyprland/window": {
            "format": "{title}",
            "separate-outputs": false,
            "icon": false
        }
    }
]
