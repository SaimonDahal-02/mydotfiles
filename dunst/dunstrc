[global]
    font = "Hack Nerd Font Mono 10"
    allow_markup = yes
    format = "<b>%s</b>\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = center
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    geometry = "200x5-6+30"
    transparency = 0
    idle_threshold = 120
    monitor = 0
    follow = mouse
    origin = bottom-right
    sticky_history = yes
    line_height = 0
    separator_height = 2
    padding = 8
    horizontal_padding = 8
    separator_color = "#585858"
    startup_notification = false
    corner_radius = 6
    frame_width = 1
    frame_color = "#89b4fa"  # Catppuccin Blue

    # Blur settings
    blur = true
    blur_radius = 10

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    background = "#1e1e2ee6"  # Catppuccin Mocha Base
    foreground = "#cdd6f4"    # Catppuccin Mocha Text
    frame_color = "#89b4fa"   # Catppuccin Blue
    timeout = 3

[urgency_normal]
    background = "#1e1e2ee6"  # Catppuccin Mocha Base
    foreground = "#cdd6f4"    # Catppuccin Mocha Text
    frame_color = "#89b4fa"   # Catppuccin Blue
    timeout = 3

[urgency_critical]
    background = "#1e1e2ee6"  # Catppuccin Mocha Base
    foreground = "#f38ba8"    # Catppuccin Red
    frame_color = "#f38ba8"   # Catppuccin Red
    timeout = 0

